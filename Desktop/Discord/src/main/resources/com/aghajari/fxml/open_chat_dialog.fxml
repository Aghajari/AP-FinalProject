<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<AnchorPane prefHeight="300" prefWidth="250" xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #37393E; -fx-background-radius: 16">

    <ImageView id="img" layoutX="85" layoutY="24" fitWidth="80" fitHeight="80"/>

    <VBox layoutY="128" minHeight="64" alignment="CENTER" prefWidth="250">
        <Label id="name" minHeight="32"
               style="-fx-font-size: 22; -fx-text-fill: linear-gradient(from 0.0% 0.0% to 100.0% 0.0%, #5ed3f7ff 0.0%, #1763c6ff 100.0%);"/>
        <Label id="full_name" minHeight="32" textFill="white" style="-fx-font-size: 18"/>
    </VBox>

    <MFXButton id="btn"
               buttonType="RAISED"
               layoutX="25"
               layoutY="240"
               styleClass="outline-button" minHeight="35.0" minWidth="200.0"
               text="Open Chat"/>
</AnchorPane>
