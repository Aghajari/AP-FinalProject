<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_dark2"
        app:cardElevation="4dp">

        <FrameLayout
            android:id="@+id/header"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:id="@+id/back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="\ue5c4"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/materialicons"
                android:layout_margin="13dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <com.aghajari.views.LoadingButton
                android:id="@+id/progress"
                android:layout_gravity="right"
                android:layout_width="56dp"
                android:layout_height="56dp">

                <TextView
                    android:id="@+id/save"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="\ue876"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/materialicons"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </com.aghajari.views.LoadingButton>

            <TextView
                android:id="@+id/title"
                android:gravity="center_vertical|left"
                android:text="Bot Api"
                android:layout_marginHorizontal="72dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:background="@drawable/dark_rad"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:background="@null"
                android:id="@+id/api"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:singleLine="true"
                android:hint="Bot HTTP Api"
                android:imeOptions="actionDone"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/regular"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <TextView
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="28dp"
            android:gravity="left"
            android:text="Connect your account to a bot..."
            android:textColor="@color/gray"
            android:fontFamily="@font/regular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>